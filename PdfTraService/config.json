{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Test\\Severstal.DeviceMonitoring\\log-.txt",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ],
    "Properties": {
      "Application": "sampleapp"
    }
  },
  "MainPath": "C:\\Test\\",
  "InformList": [
    {
      "Name": "Z100n175863",
      "Current": "F-001\\",
      "Target": "C:\\Test\\F-002\\",
      "Filter": "*.txt",
      "Active": "true", 
      "CheckFolder": "true"
    } ,
    {
      "Name": "NewWatcher",
      "Current": "F-003\\",
      "Target": "C:\\Test\\F-004\\",
      "Filter": "*.txt",
      "Active": "true", 
      "CheckFolder": "false"
    }
  ]
}

